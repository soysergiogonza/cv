{
 "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
 "formatter": {
  "enabled": true,
  "indentStyle": "space",
  "indentWidth": 1
 },
 "organizeImports": {
  "enabled": true
 },
 "linter": {
  "enabled": true,
  "rules": {
   "recommended": true,
   "style": {
    "useConst": {
     "level": "warn"
    }
   }
  }
 },
 "javascript": {
  "formatter": {
   "jsxQuoteStyle": "single",
   "quoteStyle": "single",
   "semicolons": "always"
  }
 }
}
